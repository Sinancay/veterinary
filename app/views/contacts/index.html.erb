<p id="notice"><%= notice %></p>

<h1>Message Box</h1>

<table>
  <thead>
    <tr>
      <th>Reciever</th>
      <th>Sender</th>
      <th>Title</th>
      <th>Description</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.user.name %></td>
        <td><%= user(contact.sender).name %></td>
        <td><%= contact.title %></td>
        <td><%= contact.description %></td>
        <td><%= contact.review %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>