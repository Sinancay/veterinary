<%= form_for(@report) do |f| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  ANIMAL ID    :  <%= f.select(:animal_id, @animals.all.collect {|a| [a.id, a.id]}) %>
  <input type="hidden" name="report[role]" value="animal_report">
  TITLE  :  <%= f.text_field :title %><br><br>
  REPORT DATE  :  <input type="date" name="report[date]" class="datepicker"><br><br>
  DESCRIPTION  :  <%= f.text_area :description %><br><br>
  STATUS :  <%= f.select(:status, [['DEAD ANIMAL',0] , ['SICK ANIMAL',1] , ['HEALTHY ANIMAL' , 2]]) %><br><br>
  IMAGE      :    <%= f.text_field :image %><br><br>
  REVIEW     :    <%= f.text_area :review %><br><br>
  FINDINGS   :    <%= f.text_area :findings %><br><br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
