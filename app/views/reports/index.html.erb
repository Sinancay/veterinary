<p id="notice"><%= notice %></p>

<h1>Listing Reports</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Date</th>
      <th>Description</th>
      <th>Status</th>
      <th>Review</th>
      <th>Findings</th>
      <th>Animal</th>
      <th>Confirmed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.role %></td>
        <td><%= report.title %></td>
        <td><%= report.date %></td>
        <td><%= report.description.truncate(8) %></td>
        <td><%= animal_status(report.status) %></td>
        <td><%= report.review.truncate(8) %></td>
        <td><%= report.findings.truncate(8) %></td>
        <td><%= report.animal.id %></td>
        <td><%= report.confirmed %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

